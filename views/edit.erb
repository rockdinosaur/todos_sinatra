<section id="todos">
  <header>
    <h2>
      Editing "<%= @list[:name] %>"
    </h2>
    <ul>
      <li>
        <form action="/lists/<%= @list_id %>/destroy"  method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= @list_id %>" method="post">
  <% if session[:error] %>
    <div class="flash error">
      <p>
        <%= session.delete(:error) %>
      </p>
    </div>
  <% end %>
  <dl>
    <dt>
      <label for="list_name">
        Enter new list name:
      </label>
    </dt>
    <dd>
      <input name="list_name"`` type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset>
    <input type="submit" value="Save">
    <a href="/lists/<%= @list_id %>">Cancel</a>
  </fieldset>
</form>
